var app = angular.module('SquinderApp', ['ngRoute', 'ngAnimate', 'ngMap', 'ngDialog']);

app.value( 'gps', { 
  userLat: '51.520151399999996',
  userLon: '-0.0704819'
});




app.config(['$routeProvider', '$locationProvider', function($routeProvider, $locationProvider) {
  $routeProvider
  .when('/landing', {
    controller: 'LandingPageController',
    templateUrl: "<%= asset_path('landing-page.html') %>"
  })
  .when('/home', {
    templateUrl: "<%= asset_path('index.html') %>"
  })
  .when('/search', {
    controller: 'CentreController',
    templateUrl: "<%= asset_path('main-function-page.html') %>"
  })
  .when('/profile', {
    controller: 'ProfileController',
    templateUrl: "<%= asset_path('my-profile.html') %>"   
    })
  .when('/profile/:id', {
    controller: 'UserProfileController',
    templateUrl: "<%= asset_path('user-profile.html') %>"  
    })
  .when('/phone', {
    controller: 'PhoneController',
    templateUrl: "<%= asset_path('phone.html') %>"
  })
  .when('/users/all_users', {
    controller: 'AllUsersController',
    templateUrl: "<%= asset_path('all-users.html') %>"
  })
  .when('/match', {
    controller: 'MatchController',
    templateUrl: "<%= asset_path('match.html') %>"
  });
  // .otherwise({
  //   redirectTo: '/home'
  // });

  // $locationProvider.html5Mode(true);

}]);