


<div id="sign-up-page">
<h1>Sign up</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :first_name, :placeholder => "First Name" %>
  </div>
  
  <div class="field">
  <%= f.text_field :last_name, :placeholder => "Surname" %>
  </div>

  <div class="field">
    <%= f.text_field :profile_name, :placeholder => "Profile Name" %>
  </div>

  <div class="field">
    <%= f.file_field :user_image, :placeholder => "Image" %>
  </div>

  <div class="field">
    <%= f.email_field :email, :placeholder => "Email", autofocus: true, :class => "form-control" %>
  </div>

  <div class="field">

    <% if @validatable %>

    <% end %><br />
    <%= f.password_field :password, :placeholder => "Password (8 characters minimum)", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, :placeholder => "password confirmation", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
